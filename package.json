{
  "name": "catbon-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo with Electron frontend, local backend & cloud backend",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run start:all",
    "electron:dev": "npm run electron:dev -w @catbon/electron",
    "backend:dev": "npm run dev -w @catbon/backend",
    "start:all": "concurrently \"npm run backend:dev\" \"npm run electron:dev\"",
    "build": "npm run build:electron && npm run build:backend && npm run build:shared",
    "build:electron": "npm run build -w @catbon/electron",
    "build:backend": "npm run build -w @catbon/backend",
    "build:shared": "npm run build -w @catbon/shared",
    "start:electron": "npm run start -w @catbon/electron",
    "start:backend": "npm run start -w @catbon/backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "typescript": "^5.6.3"
  }
}
