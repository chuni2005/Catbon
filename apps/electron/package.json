{
  "name": "@catbon/electron",
  "version": "1.0.0",
  "description": "Electron + React + TypeScript frontend",
  "main": "../../dist/apps/electron/main.js",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer",
    "dev": "vite",
    "start": "cross-env NODE_ENV=production electron .",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json --outDir ../../dist/apps/electron",
    "compile-and-run": "cross-env NODE_ENV=development tsc -p tsconfig.main.json && cross-env NODE_ENV=development electron .",
    "electron:dev": "concurrently \"vite\" \"npm run compile-and-run\""
  },
  "dependencies": {
    "electron": "^30.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@catbon/shared": "*"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.11.0",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.1"
  }
}